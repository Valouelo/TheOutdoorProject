<div class="homepage">
  <header>
    <div class="header-content">
      <div class="content-left">
        <h1 class="title-home">Rejoins l'aventure<br>proche de chez toi</h1>
      </div>
      <div class="content-right">
        <%= link_to activities_path do %>
          <img class="img-homepage" src="<%= image_path('homepage-1stbanner') %>" alt="Outdoor Adventure">
        <% end %>
      </div>
    </div>
  </header>

  <section class="discover-activities">
    <h2>
      <span class="discover-text">Découvrez nos annonces</span>
      <span class="outdoor-text">Outdoor</span>
    </h2>

    <section class="discovery-homepage">
      <div class="body-discovery">
        <div class="page-content-discovery">
          <div class="card-discovery">
            <%= link_to index_with_map_activities_path, class: 'btn card-trip' do %>
              <img src="<%= image_path('carte') %>" alt="Outdoor Adventure">
              <div class="card-trip-infos">
                <h2 class="title-discovery">Map</h2>
              </div>
            <% end %>
          </div>
          <div class="card-discovery">
            <%= link_to activities_path, class: 'btn card-trip' do %>
              <img src="<%= image_path('annonce') %>" alt="Outdoor Adventure">
              <div class="card-trip-infos">
                <h2 class="title-discovery">Annonces</h2>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  </section>

<div class="annonces-carousel">
  <h2 class="title-categories-home">Catégories</h2>
  <section class="carousel-category">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <% @categories.each_slice(3).with_index do |categories_group, index| %>
          <div class="carousel-item <%= 'active' if index == 0 %>">
            <div class="row justify-content-center">
              <% categories_group.each do |category| %>
                <div class="col-3">
                  <div class="card-category" style="background-image: url('<%= cl_image_path category.photo.key %>');">
                    <%= form_with url: activities_path, method: :get, class: "d-flex" do |f| %>
                      <%= hidden_field_tag :category_name, category.name %>
                      <h2 class="title-category"><%= submit_tag category.name,  class: "submit-search" %></h2>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </section>
</div>



<section class="latest-activities">
  <h2>Dernières annonces</h2>

  <div class="activities-grid">
    <% @latest_activities.each do |activity| %>

      <div class="card-latest-activities-home">
          <div class="latest-activity-image">
             <div class="activity-date">
              <p><%= activity.date.strftime("%d %B %Y") %></p>
            </div>
            <% if activity.photo.attached? %>
              <%= cl_image_tag activity.photo.key, class: "img-thumbnail-home", alt: "Activity Photo" %>
            <% else %>
              <%= image_tag "images/outdoor-logo.png", class: "img-thumbnail-home", alt: "Default Activity Photo" %>
            <% end %>

          </div>

          <div class="latest-activities-home">
              <div class="homepage-button" data-bs-toggle="modal" data-bs-target="#modal-<%= activity.id %>">
                Le trip <%= activity.title %> de <%= activity.user.username %>
              </div>
          </div>

           <!-- Modal -->
            <div class="modal fade justify-content-center" id="modal-<%= activity.id %>" tabindex="-1" aria-labelledby="modalLabel-<%= activity.id %>" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="modalLabel-<%= activity.id %>"><%= activity.title %></h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                   <%= activity.title %>
                    <% user = activity.user %>
                    <div class="imgmodal">
                        <%= cl_image_tag user.photo.key, class: "rounded-circle img-thumbnail-profile", width: "150px" %>
                    </div>
                    <p><%= activity.name %> vous propose une activité :</p>
                    <p><%= activity.description %></p>
                    <p>À <%= activity.location %></p>
                    <p>Level : <%= activity.level %></p>
                    <p>Date : <%= activity.date %></p>
                    <p>Durée : <%= activity.duration %> heures</p>
                    <p><%= activity.price %>€ par personne</p>
                    <p>Nombres de place restantes : <%= activity.capacity %></p>

                  </div>
                  <div class=" bas d-flex justify-content-between ">
                  <div class="modal-footer">
                    <%= button_tag 'Message', type: 'submit', class: 'btn5 btn-primary' %>
                      <%= form_with url: activity_bookings_path(activity, capacity: activity.capacity), method: :post do |f| %>
                      <div class="bus d-flex justify-content-between">
                      <div><%= f.number_field :booking_numbers %></div>
                      <div><%= button_tag 'Réserver', type: 'submit', class: 'btn5 btn-primary' %></div>
                      </div>

                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>



      </div>
    <% end %>
  </div>
</section>
</div>
