<div class="homepage">
  <header>
    <div class="header-content">
      <div class="content-left">
        <h1>Rejoins l'aventure<br>proche de chez toi</h1>
      </div>
      <div class="content-right">
        <img class="img-homepage" src="<%= image_url('homepage-1stbanner') %>" alt="Outdoor Adventure">
      </div>
    </div>
  </header>


 <section class="discover-activities">
  <h2>
    <span class="discover-text">Découvrez nos annonces</span>
    <span class="outdoor-text">Outdoor</span>
  </h2>

  
  <div class="buttons">
    <%= link_to index_with_map_activities_path, class: 'btn card-trip' do %>
      <img src="<%= image_url('homepage-1stbanner') %>" alt="Outdoor Adventure">
      <div class="card-trip-infos">
        <div>
          <h2>Map</h2>
        </div>
      </div>
    <% end %>
    <%= link_to activities_path, class: 'btn card-trip' do %>
      <img src="<%= image_url('homepage-1stbanner') %>" alt="Outdoor Adventure">
      <div class="card-trip-infos">
        <div>
          <h2>Annonces</h2>
        </div>
      </div>
    <% end %>
  </div>
</section>



<section class="carousel-category">
  <div class="carousel-container">
    <div class="body-discovery">
      <div class="page-content-discovery">
          <% @activities.uniq.each do |activity| %>
            <div class="card-discovery">
              <h2 class="title-discovery"><%= activity.category %></h2>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</section>






<%# COPIER JEREMY CAROUSEL %>
  <section class="carousel">
    <h2>Catégories</h2>
    <div class="carousel-container">
      <% categories = [] %>
      <% @activities.each do |activity| %>
        <% categories << activity.category %>
      <% end %>
      <% categories.uniq.each do |category| %>
        <span class="filter-option" data-action="click->filter#filter"><%= category %></span>
      <% end %>
        <%# <%= link_to activity.category, activities_path(category: activity.id), class: 'carousel-item' %>
      <%# <% end %>
    </div>
  </section>




  <section class="latest-activities">
    <h2>Dernières annonces</h2>
    <div class="activities-grid">
      <% @latest_activities.each_slice(3) do |row| %>
        <div class="row">
          <% row.each do |activity| %>
            <div class="col">
              <% if activity.photo.attached? %>
                <%= cl_image_tag activity.photo.key, class: "img-thumbnail", width: "150", height: "100" %>
              <% else %>
                <img src="images/outdoor-logo.png" alt="Activity Photo" class="img-thumbnail" width="150" height="100">
              <% end %>
              <h3><%= activity.title %></h3>
              <p><%= activity.description %></p>
              <%= link_to 'Voir', activity_path(activity) %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
</div>
