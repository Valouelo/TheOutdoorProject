<div class="container-new">
  <div class="container-user">
    <h1>Déposer une nouvelle annonce</h1>
    <div class="form-container">
      <%= form_with model: @activity, local: true do |form| %>
        <div class="form-group">
          <%= form.label :photo %>
          <%= form.file_field :photo, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :nom %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control" %>
        </div>

        <div class="form-group">
         <div class="field-container">
          <%= form.label :"Date" %>
          <%= form.select :joined_year, options_for_select((2000..Date.current.year).to_a.reverse), { prompt: "Choisi une Date" }, { class: "form-control" } %>
          </div>
           <div class="field-container">
          <%= form.label :prix %>
          <%= form.number_field :price, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= form.label :level %>
          <%= form.select :level, ["", "Débutant", "Intermédiaire", "Expert"], {}, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :catégories %>
          <%= form.select :categories, ["", "Aquatique", "Randonnée", "Kayak", "Sport de ball", "Apéro"], {}, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.submit 'Créer mon activité', class: "submit-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
