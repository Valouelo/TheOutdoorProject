<div class="container-new">
  <div class="container-user-new">
    <div class="title-new">
    <h1>Déposer une nouvelle annonce</h1>
    </div>
    <div class="form-container-new">
      <%= form_with model: @activity, local: true do |form| %>
        <div class="form-group-new">
          <%= form.label :photo %>
          <%= form.file_field :photo, class: "form-control-new" %>
        </div>
        <div class="form-group-new">
          <%= form.label :nom %>
          <%= form.text_field :name, class: "form-control-new" %>
        </div>
        <div class="form-group-new">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control-new" %>
        </div>
        <div class="form-group-new">
         <div class="field-container-new">
          <div>
      <label for="start_date">Date de début:</label>
      <%= date_field_tag :start_date, params[:start_date] %>
          <label for="start_date">Date de fin:</label>
      <%= date_field_tag :start_date, params[:start_date] %>
    </div>


       <label for="appt">Heure de debut </label>
       <input type="time" id="appt" name="appt" min="00:00" max="24:00" required />
      <label for="appt">Heure de fin </label>
       <input type="time" id="appt" name="appt" min="00:00" max="24:00" required />



           <div class="field-container-new">
          <%= form.label :prix %>
          <%= form.number_field :price, class: "form-control-new" %>
          </div>
        </div>
        <div class="form-group-new">
          <%= form.label :level %>
          <%= form.select :level, ["", "Débutant", "Intermédiaire", "Expert"], {}, class: "form-control-new" %>
        </div>
        <div class="form-group-new">
          <%= form.label :catégories %>
          <%= form.select :categories, ["", "Aquatique", "Randonnée", "Kayak", "Sport de ball", "Apéro"], {}, class: "form-control-new" %>
        </div>
        <div class="form-group-new">
          <%= form.submit 'Créer mon activité', class: "submit-button-new" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
